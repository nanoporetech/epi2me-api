{
  "name": "epi2me-api",
  "version": "2.58.1",
  "repository": "https://git.oxfordnanolabs.local/metrichor/api.git",
  "description": "API for communicating with the EPI2ME website(s)",
  "private": true,
  "main": "dist/epi2me.js",
  "dependencies": {
    "aws-sdk": "2.364.0",
    "crypto": "1.0.1",
    "fs-extra": "^7.0.0",
    "lodash": "4.17.11",
    "proxy-agent": "3.0.3",
    "queue-async": "git+https://github.com/rmp/queue.git",
    "recursive-readdir": "2.2.2",
    "request": "2.88.0",
    "request-progress": "^3.0.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "bunyan": "^1.8.12",
    "eslint": "5.9.0",
    "eslint-config-defaults": "9.0.0",
    "mocha": "5.2.0",
    "nyc": "^13.0.1",
    "proxyquire": "2.1.0",
    "sinon": "7.1.1",
    "tmp": "0.0.33",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "xunit-file": "*"
  },
  "scripts": {
    "lint": "yarn install && eslint --fix lib",
    "test": "yarn lint && mocha --recursive --require babel-register test/*.Spec",
    "test_integration": "yarn nyc --reporter=html --reporter=text mocha --recursive --require babel-register test/e2e",
    "cover": "yarn lint && yarn nyc --reporter=html --reporter=text mocha --recursive --require babel-register test/*.Spec",
    "dist": "yarn test && yarn babel lib -d dist && cp lib/default_options.json dist/"
  }
}
